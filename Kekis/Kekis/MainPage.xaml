<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Kekis.MainPage">

    <StackLayout>
        <Frame
           Margin="0, 50, 0, 70"
           HorizontalOptions="CenterAndExpand"
           VerticalOptions="Center"
           CornerRadius="90"
           IsClippedToBounds="True"
           HeightRequest="70"
           WidthRequest="110">
            <Image x:Name="Image1" />
        </Frame>

        <Label Text="Логин" FontSize="15" Padding="30,10,30,10"/>
        <Entry x:Name="loginEntry" Margin="50, 0, 50, 0"/>

        <Label Text="Пароль" FontSize="15" Padding="30,10,30,10"/>
        <Entry x:Name="passwordEntry" IsPassword ="True" Margin="50, 0, 50, 0" />
        
        <StackLayout Orientation="Horizontal" WidthRequest="100" Margin="0,60,0,0">
            <Button Text="Войти" x:Name="btnEntry" Clicked="btnEntry_Clicked" HorizontalOptions="EndAndExpand" WidthRequest="150" Margin="0,0,54,0"  ></Button>
            <Button Text="Зарегестрироваться" x:Name="btnReg" Clicked="btnReg_Clicked" HorizontalOptions="StartAndExpand" WidthRequest="150" Margin="0,0,0,0" ></Button>
        </StackLayout>
    </StackLayout>
</ContentPage>
